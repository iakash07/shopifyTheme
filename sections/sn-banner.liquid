<style>
  #sn-banner {
    background: {% if section.settings.bg %}url({{section.settings.bg | img_url:'1920x'}}){% endif %}{% if section.settings.section-bg == '' %} var(--bg-color){% else %}{{section.settings.section-bg}}{% endif %};
      background-size: cover;
      background-attachment: {{section.settings.bg_attachment}};
      background-position: {{section.settings.bg_position}};
      padding: 250px 20px 100px;
      }

  #sn-banner:after{
    background: {% if section.settings.overlay_bg %}url({{section.settings.overlay_bg | img_url:'1920x'}}){% endif %}{% if section.settings.overlay_color %}{{section.settings.overlay_color}}{% endif %};
    opacity: {{section.settings.overlay_opacity}};
    mix-blend-mode: {{section.settings.blend}};
    -webkit-mix-blend-mode:{{section.settings.blend}} ;
    -moz-mix-blend-mode:{{section.settings.blend}} ;
    background-size: cover;
    background-attachment: {{section.settings.bg_attachment2}};
    background-position: {{section.settings.bg_position2}};
  }
  @media screen and (max-width: 992px){
    #sn-banner{
      padding: 180px 20px 20px;
    }
  }
  @media screen and (max-width: 767px){
    #sn-banner {
      background: {% if section.settings.bg %}url({{section.settings.mobile_bg | img_url:'800x'}}){% endif %}{% if section.settings.section-bg == '' %} var(--bg-color){% else %}{{section.settings.section-bg}}{% endif %};
        background-size: cover;
        background-attachment: {{section.settings.bg_attachment}};
        background-position: {{section.settings.bg_position}};
        padding: 350px 20px 45px;
        }
  }
</style>

<div class="landing">
<section id="sn-banner" class="sn-section {% if section.settings.theme == 'light' %} light{% endif %}{% if section.settings.theme == 'dark' %} dark{% endif %}">
  <div class="sn-container text-center sn-hcenter">
    <div class="sn-banner-text">
      {% if section.settings.heading %}
      <h1>{{section.settings.heading}}</h1>
      <div id="byline"><span>By</span> <img src="{{section.settings.by_logo | img_url:'x70'}}" class="by-logo"></div>
      {% endif %}
      {% if section.settings.subheading %}
      <h2>{{section.settings.subheading}}</h2>
      {% endif %}
      {% if section.settings.rating %}
      <div class="sn-rating sn-hcenter">
        <div class="sn-stars">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          {% if section.settings.stars == 'five' %}
          <i class="fas fa-star"></i>
          {% endif %}
          {% if section.settings.stars == 'fourHalf' %}
          <i class="fas fa-star-half-alt"></i>
          {% endif %}
          {% if section.settings.stars == 'four' %}
          <i class="far fa-star"></i>
          {% endif %}
        </div>
        <span>{{section.settings.rating}}</span>
      </div>
      {% endif %}
      <ul class="sn-list">
        {% for block in section.blocks %}
        <li>{{block.settings.feature}}</li>
        {% endfor %}        
      </ul>
      {% if section.settings.btn %}
      <a href="#sn-collection" class="sn-btn">{{section.settings.btn}}</a>
      {% endif %}
    </div>    
  </div>
</section>
</div>
