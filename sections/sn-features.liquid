<style>
  #sn-features {
    background: {% if section.settings.bg %}url({{section.settings.bg | img_url:'1920x'}}){% endif %}{% if section.settings.section-bg == '' %} var(--bg-color){% else %}{{section.settings.section-bg}}{% endif %};
      background-size: cover;
      background-attachment: {{section.settings.bg_attachment}};
      background-position: {{section.settings.bg_position}};
      }

  #sn-features:after{
    background: {% if section.settings.overlay_bg %}url({{section.settings.overlay_bg | img_url:'1920x'}}){% endif %}{% if section.settings.overlay_color %}{{section.settings.overlay_color}}{% endif %};
    opacity: {{section.settings.overlay_opacity}};
    mix-blend-mode: {{section.settings.blend}};
    -webkit-mix-blend-mode:{{section.settings.blend}} ;
    -moz-mix-blend-mode:{{section.settings.blend}} ;
    background-size: cover;
    background-attachment: {{section.settings.bg_attachment2}};
    background-position: {{section.settings.bg_position2}};
  }

  .sn-feature-wrap {
    width: 100%;
    max-width: calc(25% - 10px);
    padding: 20px;
    margin: 5px;
    background: {{section.settings.block_bg}};
      border-radius: var(--block-radius);
        border: 1px solid rgba(0, 0, 0, 0.1);
        }
</style>

<div class="landing">
<section id="sn-features" class="sn-section {% if section.settings.theme == 'light' %} light{% endif %}{% if section.settings.theme == 'dark' %} dark{% endif %}">
  {% if section.settings.heading %}
  <div class="sn-container text-center">
    <div class="sn-title">
      {% if section.settings.heading %}
      <h2>{{section.settings.heading}}</h2>
      {% endif %}
      {% if section.settings.subheading %}
      <h4>{{section.settings.subheading}}</h4>
      {% endif %}
    </div>
  </div>
  {% endif %}
  <div class="sn-container text-center mt-20">
    {% for block in section.blocks %}
    <div class="sn-feature-wrap">
      {% if block.settings.image %}
      <div class="sn-benefit-img">
        <img src="{{block.settings.image | img_url:'x194'}}" alt="" class="sn-img">
      </div>
      {% endif %}
      {% if block.settings.icon %}
      <div class="sn-feature-icon">
        <img src="{{block.settings.icon | img_url:'128x'}}" alt="" class="sn-img">
      </div>
      {% endif %}
      <h4>{{block.settings.title}}</h4>
      <p>{{block.settings.text}}</p>
    </div>
    <!-- sn feature wrap -->
    {% endfor %}
  </div>
</section>
</div>
