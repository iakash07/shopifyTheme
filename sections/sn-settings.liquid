<style>
:root {
    font-size: {{section.settings.base-font}}px;
  	--btn-radius: {{section.settings.btn-radius}}px;
  --block-radius: {{section.settings.block-radius}}px;
}

.dark {
  	--heading-color: {{section.settings.dark-heading}};
    --text-color: {{section.settings.dark-text}};
    --bg-color:{{section.settings.bg}};
    --primary-color: {{section.settings.primary}};
    --secondary-color:{{section.settings.secondary}};
    --btn-text: {{section.settings.btn-text}};
    --btn-text-hover: {{section.settings.light-btn-text2}};
    --stars: {{section.settings.stars}};
}

.light {
  	--heading-color: {{section.settings.light-heading}};
    --text-color: {{section.settings.light-text}};
    --bg-color:{{section.settings.light-bg}};
    --primary-color: {{section.settings.light-primary}};
    --secondary-color:{{section.settings.light-secondary}};
    --btn-text: {{section.settings.light-btn-text}};
    --btn-text-hover: {{section.settings.light-btn-text2}};
    --stars: {{section.settings.light-stars}};
}
</style>

