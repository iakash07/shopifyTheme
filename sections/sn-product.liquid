{% assign product = all_products[section.settings.product] %}
{% assign current_variant = product.selected_or_first_available_variant %}

<style>
  #sn-product {
    background: {% if section.settings.bg %}url({{section.settings.bg | img_url:'1920x'}}){% endif %}{% if section.settings.section-bg == '' %} var(--bg-color){% else %}{{section.settings.section-bg}}{% endif %};
      background-size: cover;
      background-attachment: {{section.settings.bg_attachment}};
      background-position: {{section.settings.bg_position}};
      }

  #sn-product:after{
    background: {% if section.settings.overlay_bg %}url({{section.settings.overlay_bg | img_url:'1920x'}}){% endif %}{% if section.settings.overlay_color %}{{section.settings.overlay_color}}{% endif %};
    opacity: {{section.settings.overlay_opacity}};
    mix-blend-mode: {{section.settings.blend}};
    -webkit-mix-blend-mode:{{section.settings.blend}} ;
    -moz-mix-blend-mode:{{section.settings.blend}} ;
    background-size: cover;
    background-attachment: {{section.settings.bg_attachment2}};
    background-position: {{section.settings.bg_position2}};
  }
</style>

<div class="landing">
<section id="sn-product" class="sn-section {% if section.settings.theme == 'light' %} light{% endif %}{% if section.settings.theme == 'dark' %} dark{% endif %}">
  <div class="sn-container sn-vcenter">
    <div class="sn-gallery">      
      <div class="sn-product-images">
        {% for image in product.images %}
        <img src="{{image | img_url:'560x'}}" alt="" class="sn-img">
        {% endfor %}        
      </div>
      <div class="sn-product-thumbs">
        {% for image in product.images %}
        <img src="{{image | img_url:'100x'}}" alt="" class="sn-img">
        {% endfor %}
      </div>
    </div>
    <div class="sn-desc">
      {% if section.settings.product != '' %}
      <h2>{{product.title}}</h2>
      {% endif %}
      {% if section.settings.rating %}
      <div class="sn-rating">
        <div class="sn-stars">
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          <i class="fas fa-star"></i>
          {% if section.settings.stars == 'five' %}
          <i class="fas fa-star"></i>
          {% endif %}
          {% if section.settings.stars == 'fourHalf' %}
          <i class="fas fa-star-half-alt"></i>
          {% endif %}
          {% if section.settings.stars == 'four' %}
          <i class="far fa-star"></i>
          {% endif %}
        </div>
        <span>{{section.settings.rating}}</span>
      </div>
      {% endif %}
      <ul class="sn-list">
        {% for block in section.blocks %}
        <li>{{block.settings.feature}}</li>
        {% endfor %}
      </ul>
      {% if section.settings.product != '' %}
      <p class="sn-price"><del>{{current_variant.compare_at_price | money}}</del><span>{{current_variant.price | money}}</span></p>
      <a href="#" class="sn-btn">{{section.settings.btn}}</a>
      {% endif %}
    </div>
  </div>
</section>
</div>
